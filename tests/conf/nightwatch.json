{
  "src_folders": [
    "./tests"
  ],
  "output_folder": "reports",
  "custom_commands_path": [
    "./lib/commands",
    "./lib/commands/mobile"
  ],
  "custom_assertions_path": [
    "./lib/assertions",
    "./lib/assertions/mobile"
  ],
  "selenium": {
    "start_process": true,
    "server_path": "./node_modules/selenium-server/lib/runner/selenium-server-standalone-3.5.3.jar",
    "log_path": "reports",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./node_modules/chromedriver/lib/chromedriver/chromedriver",
      "webdriver.ie.driver": ""
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "sync_test_names": true,
      "screenshots": {
        "enabled": false,
        "path": ""
      },
      "desiredCapabilities": {
        "browserName": "chrome"
      },
      "globals": {
        "syncModeBrowserList": [
          "safari:10",
          "iphone",
          "ipad"
        ],
        "resultUrlPrefix": "https://saucelabs.com/tests/"
      }
    },
    "phantomjs": {
      "desiredCapabilities": {
        "browserName": "phantomjs",
        "phantomjs.binary.path": "./node_modules/phantomjs/bin/phantomjs"
      }
    },
    "safari": {
      "desiredCapabilities": {
        "browserName": "safari"
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true,
        "javascriptEnabled": true
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": [
            "--window-size=1280,1024"
          ]
        }
      }
    },
    "appiummweb": {
      "desiredCapabilities": {
        "browserName": "safari",
        "appiumVersion": "1.6.3",
        "automationName": "xcuitest",
        "platformName": "iOS",
        "platformVersion": "9.3",
        "deviceName": "iPhone 6",
        "waitForAppScript": "true"
      },
      "appium": {
        "start_process": true
      },
      "selenium": {
        "start_process": false
      }
    },
    "sauce": {
      "selenium_host": "ondemand.saucelabs.com",
      "selenium_port": 80,
      "username": "",
      "access_key": "",
      "desiredCapabilities": {
        "browserName": "",
        "platform": "",
        "version": "",
        "tunnel-identifier": ""
      },
      "selenium": {
        "start_process": false
      }
    },
    "browserstack": {
      "selenium_host": "hub-cloud.browserstack.com",
      "selenium_port": 80,
      "selenium": {
        "start_process": false
      }
    }
  }
}